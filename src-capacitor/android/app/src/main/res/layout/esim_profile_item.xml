<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingHorizontal="20dp"
	android:paddingVertical="8dp"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardCornerRadius="10dp"
		app:cardElevation="0dp">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<RelativeLayout
				android:id="@+id/rlSim"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:background="?selectableItemBackground"
				android:paddingTop="10dp">

				<androidx.appcompat.widget.AppCompatImageView
					android:id="@+id/ivSim"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_centerVertical="true"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/ic_sim_card" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_toEndOf="@+id/ivSim"
					android:orientation="vertical">
					<androidx.appcompat.widget.AppCompatTextView
						android:id="@+id/textView"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_toStartOf="@+id/switch1"
						android:layout_toEndOf="@+id/ivSim"
						android:ellipsize="end"
						android:maxLines="1"
						android:fontFamily="@font/spartan_semi_bold"
						android:textColor="@color/window_color_dark"
						android:textSize="18dp"
						android:layout_marginStart="10dp"
						android:layout_centerVertical="true"
						android:text="074 455 878" />

					<androidx.appcompat.widget.AppCompatTextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_toStartOf="@+id/switch1"
						android:layout_toEndOf="@+id/ivSim"
						android:ellipsize="end"
						android:maxLines="1"
						android:fontFamily="@font/spartan_semi_bold"
						android:textSize="12dp"
						android:layout_marginStart="12dp"
						android:layout_centerVertical="true"
						android:text="T-mobile" />

				</LinearLayout>

				<Switch
					android:id="@+id/switch1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:checked="false"
					android:padding="5dp"
					android:focusable="false"
					android:thumbTint="@android:color/black" />


			</RelativeLayout>

		</LinearLayout>

	</androidx.cardview.widget.CardView>


</LinearLayout>